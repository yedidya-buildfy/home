rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can read any profile image, but only write their own
    match /profile-images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy profile images (without subfolder structure)
    match /profile-images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Grocery images - authenticated users can read/write grocery images for any home
    match /grocery-images/{homeId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}